{
  // coc specific
  //------------------------------------------------------------
  "suggest.virtualText": true,
  "diagnostic.virtualText": true,
  "diagnostic.virtualTextLevel": "hint",
  "diagnostic.hintSign": "⏵",
  "diagnostic.infoSign": "ℹ",
  "diagnostic.errorSign": "♺", // "⊘",
  "diagnostic.warningSign": "⚠",
  "diagnostic.virtualTextCurrentLineOnly": false,
  "diagnostic.enableHighlightLineNumber": true,
  "diagnostic.enableMessage": "jump",
  "coc.preferences.currentFunctionSymbolAutoUpdate": true,
  "notification.focusable": false,
  "notification.border": false,
  "notification.winblend": 40,
  "codeLens.enable": false,
  "coc.preferences.enableMarkdown": true,
  "coc.preferences.formatOnSave": true,
  "colors.enable": true,
  "highlight.colors.enable": true,
  "highlight.document.enable": true,
  "highlight.colorNames.enable": true,

  // typescripts
  "eslint.workingDirectories": [{ "mode": "location" }],
  "eslint.autoFixOnSave": false,
  "eslint.codeAction.showDocumentation": {
    "enable": true
  },
  "eslint.packageManager": "pnpm",
  "typescript.inlayHints.enumMemberValues.enabled": true,

  // lua
  //------------------------------------------------------------
  "sumneko-lua.enableNvimLuaDev": true,
  "sumneko-lua.enable": true,

  // css
  //------------------------------------------------------------
  "css.lint.unknownAtRules": "ignore",
  "prettier.formatterPriority": 2,

  // rust
  //------------------------------------------------------------
  "rust-analyzer.workspace.symbol.search.scope": "workspace_and_dependencies",
  "rust-analyzer.debug.runtime": "vimspector",
  "rust-analyzer.debug.vimspector.configuration.name": "launch",
  "rust-analyzer.workspace.symbol.search.limit": 128,
  "rust-analyzer.cachePriming.enable": true,
  "rust-analyzer.lru.capacity": 512,
  "rust-analyzer.inlayHints.closingBraceHints.enable": true,
  "rust-analyzer.inlayHints.typeHints.enable": true,
  "rust-analyzer.inlayHints.parameterHints.enable": true,
  "rust-analyzer.inlayHints.closureReturnTypeHints.enable": "always",
  "rust-analyzer.inlayHints.chainingHints.enable": true,
  "rust-analyzer.typing.autoClosingAngleBrackets.enable": true,
  "rust-analyzer.imports.granularity.enforce": true,
  "rust-analyzer.completion.postfix.enable": true,
  "rust-analyzer.completion.autoself.enable": true,
  "rust-analyzer.completion.autoimport.enable": true,
  "rust-analyzer.restartServerOnConfigChange": true,
  "rust-analyzer.cargo.buildScripts.enable": true,
  "rust-analyzer.cargo.buildScripts.useRustcWrapper": true,
  "rust-analyzer.updates.checkOnStartup": true,
  "rust-analyzer.updates.prompt": false,
  "rust-analyzer.rustfmt.extraArgs": ["+nightly"],
  "rust-analyzer.cargo.autoreload": true,

  // Go
  "go.goplsUseDaemon": true,
  "svelte.enable-ts-plugin": true,
  "snippets.ultisnips.pythonPrompt": false
}
