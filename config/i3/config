# Edited to make it more vim-like
# Basically change
#   l         k
# j   ; ==> h   l
#   k         j
# And where used to be h, now become semicolon

#  Multimedia keys {{{ #

  # Pulse Audio controls
  bindsym XF86AudioRaiseVolume exec --no-startup-id pactl set-sink-volume 0 +5% #increase sound volume
  bindsym XF86AudioLowerVolume exec --no-startup-id pactl set-sink-volume 0 -5% #decrease sound volume
  bindsym XF86AudioMute exec --no-startup-id pactl set-sink-mute 0 toggle # mute sound

  # Sreen brightness controls
  bindsym XF86MonBrightnessUp exec xbacklight -inc 10 # increase screen brightness
  bindsym XF86MonBrightnessDown exec xbacklight -dec 10 # decrease screen brightness

  # Media player controls
  bindsym XF86AudioPlay  exec cmus-remote --pause # don't know wh
  bindsym XF86AudioPause exec cmus-remote --play # but this works
  bindsym XF86AudioNext  exec cmus-remote --next
  bindsym XF86AudioPrev  exec cmus-remote --prev

#  }}} Multimedia keys #


#  UI setting {{{ #

  # Make gnome theme available
  exec gnome-settings-daemon
  # Save some screen space
  new_window pixel 3
  hide_edge_borders both

  #  Messaging application {{{ #
    for_window [class="^Pidgin$"] floating enable
    assign [class="^Pidgin$"] $tag_message

    for_window [class="Viber"] floating enable
    assign [class="Viber"] $tag_message

    for_window [class="Skype"] floating enable
    assign [class="Skype"] $tag_message
  #  }}} #

  exec --no-startup-id conky
#  }}} UI setting #


#  Focus {{{ #

# Change focus
# focus_follows_mouse no
focus_follows_mouse true
popup_during_fullscreen smart

# Workspace back and forth (with/without active container)
workspace_auto_back_and_forth yes
bindsym $mod+b workspace back_and_forth
bindsym $mod+Shift+b move container to workspace back_and_forth; workspace back_and_forth


# }}} #


# i3 config file (v4)
#
# Please see http://i3wm.org/docs/userguide.html for a complete reference!

# Use Win as the mod key, because Alt is conflicted with some other software
set $mod Mod4

# Font for window titles. Will also be used by the bar unless a different font
# is used in the bar {} block below.
font pango:Inconsolata for Powerline Medium 10

# This font is widely installed, provides lots of unicode glyphs, right-to-left
# text rendering and scalability on retina/hidpi displays (thanks to pango).
#font pango:DejaVu Sans Mono 8

# Before i3 v4.8, we used to recommend this one as the default:
# font -misc-fixed-medium-r-normal--13-120-75-75-C-70-iso10646-1
# The font above is very space-efficient, that is, it looks good, sharp and
# clear in small sizes. However, its unicode glyph coverage is limited, the old
# X core fonts rendering does not support right-to-left and this being a bitmap
# font, it doesn’t scale on retina/hidpi displays.

# Use Mouse+$mod to drag floating windows to their wanted position
# I prefer using Alt key for moving floating windows
floating_modifier Mod1

# start a terminal
bindsym $mod+Return exec i3-sensible-terminal

# move window to scratchpad
bindsym $mod+m move scratchpad
bindsym $mod+n scratchpad show

# kill focused window
bindsym $mod+q kill

# start dmenu (a program launcher)
# bindsym $mod+d exec dmenu_run
# There also is the (new) i3-dmenu-desktop which only displays applications
# shipping a .desktop file. It is a wrapper around dmenu, so you need that
# installed.
# bindsym $mod+d exec --no-startup-id i3-dmenu-desktop
#
# Use j4, as they claim it 25x faster than i3-menu-desktop. I also don't like
# the delay in i3-menu-desktop
bindsym $mod+d exec --no-startup-id j4-dmenu-desktop

# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# alternatively, you can use the cursor keys:
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# alternatively, you can use the cursor keys with faster movement
bindsym $mod+Shift+Left  move left    50px
bindsym $mod+Shift+Down  move down    50px
bindsym $mod+Shift+Up    move up      50px
bindsym $mod+Shift+Right move right   50px


# split in horizontal orientation
bindsym $mod+semicolon split h; exec notify-send "split horizontally"

# split in vertical orientation
bindsym $mod+v split v; exec notify-send "split vertically"

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# change container layout (stacked, tabbed, toggle split)
bindsym $mod+s layout stacking
bindsym $mod+w layout tabbed
bindsym $mod+t layout toggle split
bindsym $mod+Shift+v layout splitv
bindsym $mod+Shift+semicolon layout splith

# toggle tiling / floating
bindsym $mod+Shift+p floating toggle

# change focus between tiling / floating windows
bindsym $mod+p focus mode_toggle

# focus the parent container
bindsym $mod+a focus parent

# focus the child container
bindsym $mod+Shift+a focus child

# Name the workspaces
set $tag_main "1:Main"
set $tag_message "2:Messaging"
set $tag_music "3:Music"
set $tag4 "4"
set $tag5 "5"
set $tag6 "6"
set $tag7 "7"
set $tag8 "8"
set $tag9 "9"
set $tag_system "10:System"

# switch to workspace
bindsym $mod+1 workspace $tag_main
bindsym $mod+2 workspace $tag_message
bindsym $mod+3 workspace $tag_music
bindsym $mod+4 workspace $tag4
bindsym $mod+5 workspace $tag5
bindsym $mod+6 workspace $tag6
bindsym $mod+7 workspace $tag7
bindsym $mod+8 workspace $tag8
bindsym $mod+9 workspace $tag9
bindsym $mod+0 workspace $tag_system

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace $tag_main
bindsym $mod+Shift+2 move container to workspace $tag_message
bindsym $mod+Shift+3 move container to workspace $tag_music
bindsym $mod+Shift+4 move container to workspace $tag4
bindsym $mod+Shift+5 move container to workspace $tag5
bindsym $mod+Shift+6 move container to workspace $tag6
bindsym $mod+Shift+7 move container to workspace $tag7
bindsym $mod+Shift+8 move container to workspace $tag8
bindsym $mod+Shift+9 move container to workspace $tag9
bindsym $mod+Shift+0 move container to workspace $tag_system

# move focused container to workspace and also move to that workspace
bindsym $mod+Control+1 move container to workspace $tag_main,    workspace $tag_main
bindsym $mod+Control+2 move container to workspace $tag_message, workspace $tag_message
bindsym $mod+Control+3 move container to workspace $tag_music,   workspace $tag_music
bindsym $mod+Control+4 move container to workspace $tag4,        workspace $tag4
bindsym $mod+Control+5 move container to workspace $tag5,        workspace $tag5
bindsym $mod+Control+6 move container to workspace $tag6,        workspace $tag6
bindsym $mod+Control+7 move container to workspace $tag7,        workspace $tag7
bindsym $mod+Control+8 move container to workspace $tag8,        workspace $tag8
bindsym $mod+Control+9 move container to workspace $tag9,        workspace $tag9
bindsym $mod+Control+0 move container to workspace $tag_system,  workspace $tag_system


# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
# bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+Delete exit

bindsym $mod+Shift+BackSpace exec i3lock

# resize window (you can also use the mouse for that)
mode "resize" {
        # These bindings trigger as soon as you enter the resize mode

        # Pressing left will shrink the window’s width.
        # Pressing right will grow the window’s width.
        # Pressing up will shrink the window’s height.
        # Pressing down will grow the window’s height.
        bindsym h resize shrink width 3 px or 3 ppt
        bindsym j resize grow height 3 px or 3 ppt
        bindsym k resize shrink height 3 px or 3 ppt
        bindsym l resize grow width 3 px or 3 ppt

        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 3 px or 3 ppt
        bindsym Down resize grow height 3 px or 3 ppt
        bindsym Up resize shrink height 3 px or 3 ppt
        bindsym Right resize grow width 3 px or 3 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
}

bindsym $mod+r mode "resize"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
  separator_symbol " | "
  tray_output primary
  position top
  i3bar_command i3bar
  status_command i3status

	colors {
		# Whole color settings
		background #000000
		statusline #ffffff
		separator  #666666

		# Type             border  background font
		focused_workspace  #008fff #007fff #ffffff
		active_workspace   #333333 #5f676a #ffffff
		inactive_workspace #333333 #222222 #888888
		urgent_workspace   #aa0000 #990000 #ffffff
	}
}
