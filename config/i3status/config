        format = "%status %remaining %percentage"
        integer_battery_capacity = true
        format_down = "âˆ…"
        status_chr = "ğŸ”Œ"
        status_bat = "âš¡"
        status_full = "ğŸ”‹ "
        path = "/sys/class/power_supply/BAT%d/uevent"
        hide_seconds = true
        last_full_capacity = true
        low_threshold = 10
}

