general {
        output_format = "none"
        colors = true
        interval = 1
}

order += "volume master"
order += "ethernet eno1"
order += "tztime local"

ethernet eno1 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "▣ %ip"
        format_down = "E: down"
}

tztime local {
        format = "%b-%d 🕐  %H:%M:%S"
}

volume master {
        format = "🔊 %volume"
        format_muted = "🔇 (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

