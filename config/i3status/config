general {
        output_format = "none"
        colors = true
        interval = 1
}

order += "volume master"
order += "wireless wlp3s0"
order += "ethernet enp0s25"
order += "battery 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: (%quality at %essid) %ip"
        format_down = "W: down"
}

ethernet enp0s25 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

