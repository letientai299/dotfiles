general {
        output_format = "i3bar"
        colors = true
        interval = 5
}

order += "volume master"
order += "run_watch DHCP"
order += "wireless wlan0"
order += "ethernet eth0"
order += "battery 0"
order += "tztime local"

wireless wlp3s0 {
        format_up = "W: (%quality at %essid, %bitrate) %ip"
        format_down = "W: down"
}

ethernet enp0s25 {
        # if you use %speed, i3status requires the cap_net_admin capability
        format_up = "E: %ip (%speed)"
        format_down = "E: down"
}

battery 0 {
        format = "%status %remaining %percentage"
        integer_battery_capacity = true
        format_down = "∅"
        status_chr = "🔌"
        status_bat = "⚡"
        status_full = "🔋 "
        path = "/sys/class/power_supply/BAT%d/uevent"
        hide_seconds = true
        last_full_capacity = true
        low_threshold = 10
}

tztime local {
        format = "%b-%d 🕐  %H:%M:%S"
}

volume master {
        format = "🔊 %volume"
        format_muted = "🔇 (%volume)"
        device = "default"
        mixer = "Master"
        mixer_idx = 0
}

